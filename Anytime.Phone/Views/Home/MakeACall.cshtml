<div class="text-center">
	<h3 class="display-4">Make a Call</h3>
</div>

<div class="call-form">
	<h2>Request a Phone Call</h2>
	<form action="submit_call.php" method="post">
		<div class="form-group">
			<label for="fullName">Full Name:</label>
			<input type="text" id="fullName" name="fullName" required>
		</div>

		<div class="form-group">
			<label for="phoneNumber">Phone Number:</label>
			<input type="tel" id="phoneNumber" name="phoneNumber" required placeholder="+1 555-123-4567">
		</div>

		<div class="form-group">
			<label for="callReason">Reason for Call:</label>
			<select id="callReason" name="callReason" required>
				<option value="">--Please choose an option--</option>
				<option value="support">Customer Support</option>
				<option value="sales">Sales Inquiry</option>
				<option value="technical">Technical Assistance</option>
				<option value="other">Other</option>
			</select>
		</div>

		<div class="form-group">
			<label for="preferredTime">Preferred Time for Call:</label>
			<input type="time" id="preferredTime" name="preferredTime">
		</div>

		<div class="form-group">
			<label for="notes">Additional Notes:</label>
			<textarea id="notes" name="notes" rows="4" placeholder="Add any extra information..."></textarea>
		</div>

		<button type="submit">Request Call</button>
	</form>
</div>

<style>
	body {
		font-family: Arial, sans-serif;
		background-color: #f4f6f8;
		padding: 40px;
	}

	.call-form {
		background-color: white;
		padding: 20px 30px;
		border-radius: 8px;
		max-width: 400px;
		margin: auto;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

		.call-form h2 {
			margin-top: 0;
